<%- include('header.html') %>
<style>
  .fade:not(.show) {
    opacity: 0;
    display:none;}
</style>
<main id="main" class="main">
<section class="section profile">
<div class="row">

	<div class="col-xl-4">
		<div class="card">
			<div class="card-body profile-card pt-4 d-flex flex-column align-items-center">
				<br/>
				<img src="https://yogibo.kr/web/img/icon/main_logo.png" alt="Profile" class="">
				<br/>
				<h2><%=user.성함 %></h2>
				<br/>
				<h3><%=user.근무매장 %></h3>
			</div>
		</div>
	</div>

	<div class="col-xl-5">
		<div class="card">
			<div class="card-body pt-3">
				<ul class="nav nav-tabs nav-tabs-bordered">
					<li class="nav-item">
					<button class="nav-link active" data-bs-toggle="tab" data-bs-target="#profile-overview">사용자정보</button>
					</li>
					<li class="nav-item">
					<button class="nav-link" data-bs-toggle="tab" data-bs-target="#profile-edit">비밀번호수정</button>
					</li>
				</ul>
				<div class="tab-content pt-2 mt-3">
					
          <div class="tab-pane fade show active profile-overview" id="profile-overview">
						<div class="row">
							<div class="col-lg-3 col-md-4 label ">
								사용자 ID
							</div>
							<div class="col-lg-9 col-md-8">
								<%=user.id %>
							</div>
						</div>
						<div class="row">
							<div class="col-lg-3 col-md-4 label ">
								성함 Name
							</div>
							<div class="col-lg-9 col-md-8">
								<%=user.성함 %>
							</div>
						</div>
						<div class="row">
							<div class="col-lg-3 col-md-4 label">
								지점 Store
							</div>
							<div class="col-lg-9 col-md-8 store">
								<%=user.근무매장 %>
							</div>
						</div>
					</div>

				</div>
				<div class="tab-pane fade profile-overview" id="profile-edit">
					
					<form action="/change_password" method="POST">
						<div class="row">
						<div class="col-lg-3 col-md-4 label">
							사용자 ID
						</div>
						<div class="col-lg-9 col-md-8">
							<input type="text" name="userid" id="userid" value="<%= user.id %>" readonly style="border:none;">
						</div>
						</div>
					
						<div class="row">
						<div class="col-lg-3 col-md-4 label">
							현재 비밀번호
						</div>
						<div class="col-lg-9 col-md-8">
							<input type="password" name="currentPassword" required>
						</div>
						</div>
					
						<div class="row">
						<div class="col-lg-3 col-md-4 label">
							새 비밀번호
						</div>
						<div class="col-lg-9 col-md-8">
							<input type="password" name="newPassword" required>
						</div>
						</div>
					
						<div class="row">
						<div class="col-lg-3 col-md-4 label">
							새 비밀번호 확인
						</div>
						<div class="col-lg-9 col-md-8">
							<input type="password" name="confirmPassword" required>
						</div>
						</div>
					
						<button type="submit" id="postcodify_search_button" class="btn  btn-outline-info col-md-3 mt-4 entry_info">비밀번호 수정</button>					
					</form>

				</div>
			</div>
		</div>
	</div>
	</section>
	</main>
	<script>
  const storeElement = document.querySelector('.store');
  if (!storeElement.textContent.trim()) {
    storeElement.textContent = "관리자";
  }
	</script>
	<%- include('footer.html') %>