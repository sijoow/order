            //c
            function getWeekOfMonth(date) {
                const firstDayOfMonth = new Date(date.getFullYear(), date.getMonth(), 1);
                return Math.ceil((date.getDate() + firstDayOfMonth.getDay()) / 7);
            }

            function getStartAndEndDatesOfWeek(date) {
                const weekOfMonth = getWeekOfMonth(date);
                const startDate = new Date(date.getFullYear(), date.getMonth(), (weekOfMonth - 1) * 7 - (new Date(date.getFullYear(), date.getMonth(), 1).getDay() - 1) + 1);
                let endDate = new Date(startDate);
                endDate.setDate(startDate.getDate() + 6);

                return { startDate, endDate };
            }
                        
            fetchDataFromServer().then(data => {
                const { startDate, endDate } = getStartAndEndDatesOfWeek(new Date());
                const salesPriceElement = document.getElementById('salesPrice');
                const salesPriceWeeklyElement = document.getElementById('salesPriceWeekly');
                const salesPriceMonthElement = document.getElementById('salesPriceMonth');

                //전국 매장 
