            async function fetchDataFromServer() {
                try {
                    const response = await fetch('/fetchData');
                    if (!response.ok) {
                    throw new Error('Network response was not ok');
                    }
                    const data = await response.json();
                    return data;
                } catch (error) {
                    console.error("데이터 가져오는 중 문제 발생:", error.message);
                }
