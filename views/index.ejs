                                newDiv.setAttribute('value', clickedButtonText);
                                newDiv.textContent = '0원';
                                divContainer.appendChild(newDiv);
                            }
                        }
        
                        handleDiv(salesPrice);
                        handleDiv(salesPriceWeekly);
                        handleDiv(salesPriceMonth);
                    });
                });
            
                  
