                            let isFound = false;
                            const divs = divContainer.querySelectorAll('div');
                            divs.forEach(function(div) {
                                if (div.getAttribute('value') === clickedButtonText) {
                                    div.style.display = 'block';
                                    isFound = true;
                                } else {
                                    div.style.display = 'none';
                                }
                            });
        
